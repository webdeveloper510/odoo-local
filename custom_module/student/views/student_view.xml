<odoo>
    <data>
        <!-- Model definition -->
        <record id="model_wb_student" model="ir.model">
            <field name="name">wb.student</field>
            <field name="model">wb.student</field>
        </record>
        
        <!-- View definition -->
        <record id="view_wb_student_form" model="ir.ui.view">
            <field name="name">wb.student.form</field>
            <field name="model">wb.student</field>
            <field name="arch" type="xml">
                <form string="My Model">
                    <sheet>
                        <div class="oe_title">
                            <h1>Form View for My Model</h1>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
